.modal-dialog
  .modal-content
    = form_for @department, url: departments_path, method: :post, authenticity_token: true, remote: true do |f|
      .modal-header
        %h4.modal-title
          = t(:departments)[:new_header]
        %button.close{ type: 'button', aria: {label: 'Close' }, data: {dismiss: 'modal' } }
        %span{ aria: {hidden: 'true' } } &times;
      .modal-body
        #formErrors
        .form-group
          = f.label :name, t(:departments)[:fields][:name], class: 'required'
          = f.text_field :name, class: 'form-control'
        .form-group
          = f.label :abbreviation, t(:departments)[:fields][:abbreviation]
          = f.text_field :abbreviation, class: 'form-control'
      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal'} }
          = t(:actions)[:close]
        = f.submit t(:actions)[:submit], class: 'btn btn-primary'
