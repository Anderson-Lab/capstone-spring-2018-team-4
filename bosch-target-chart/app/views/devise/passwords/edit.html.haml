.card.offset-lg-3.col-lg-6
  .card-body
    %h2.text-center
      = t(:devise)[:passwords][:edit][:header]

    = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token

      .form-group
        = f.label :password, t(:devise)[:passwords][:edit][:password], class: 'required'
        - if @minimum_password_length
          %em
            = t('devise.passwords.characters_minimum', minimum_password_length: @minimum_password_length)
        = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label :password_confirmation, t(:devise)[:passwords][:edit][:confirmation], class: 'required'
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

      = f.submit t(:devise)[:passwords][:edit][:submit], class: 'btn btn-block btn-outline-success'

    = render 'devise/shared/links'
