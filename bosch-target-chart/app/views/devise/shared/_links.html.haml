- if controller_name != 'sessions'
  %br
  = link_to t(:devise)[:sessions][:submit], new_session_path(resource_name), class: 'btn btn-block btn-outline-secondary'

- if devise_mapping.registerable? && controller_name != 'registrations'
  %br
  = link_to t(:devise)[:registrations][:submit], new_registration_path(resource_name), class: 'btn btn-block btn-outline-secondary'

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %br
  = link_to t(:devise)[:passwords][:forgot], new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %br
  = link_to t(:devise)[:confirmations][:lost], new_confirmation_path(resource_name)

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %br
  = link_to t(:devise)[:unlocks][:lost], new_unlock_path(resource_name)

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    %br
    = link_to t('devise.omniauth', OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider)
