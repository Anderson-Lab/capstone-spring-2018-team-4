.container
  .row
    .col-md-3.order-md-last.d-flex.align-items-center.justify-content-end#manageCategoriesContainer
      = link_to t(:categories)[:manage_categories], categories_path, id: 'manageCategories', class: 'btn btn-info float-right'
    .col-md-2.order-md-last.d-flex.align-items-center.pr-0#yearSelectContainer
      = render 'charts/year_dropdown', year: year, department: nil
    %h1.col-md-7.pl-0
      = I18n.t('charts.new_year.header', year: year)
  .row
    = link_to I18n.t('charts.new_year.start_button', year: year), charts_path(year: year), method: :post, class: 'btn btn-lg btn-block btn-outline-success'
