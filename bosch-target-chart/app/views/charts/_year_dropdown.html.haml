.dropdown#yearSelect
  %button.btn.btn-block.btn-primary.dropdown-toggle#yearSelectButton{ type: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' } }
    = "Select a Year"
  .dropdown-menu{ aria: { labelledby: 'yearSelectButton' } }
    - Chart.years_for_select(department).each do |yr|
      - if controller_name == 'departments'
        = link_to yr, department_path(department, year: yr), class: ['dropdown-item', yr == year ? 'selected' : '']
      - else
        = link_to yr, dashboard_path(year: yr), class: ['dropdown-item', yr == year ? 'selected' : '']
