#chartContainer
  .container
    .row
      - if header_for == 'plant_chart' || header_for == 'show_department'
        .col-md-2.order-md-last.d-flex.align-items-center.justify-content-end#manageCategoriesContainer
          - if header_for == 'show_department'
            = link_to t(:departments)[:edit], edit_department_path(department.id), id: 'editDepartment', class: 'btn btn-block btn-warning float-right'
          - else
            = link_to t(:categories)[:manage_categories], categories_path, id: 'manageCategories', class: 'btn btn-block btn-info float-right'
        .col-md-2.order-md-last.d-flex.align-items-center.pr-0#yearSelectContainer
          - department ||= nil
          = render 'charts/year_dropdown', year: year, department: department
        %h1.chart-header.col-md-8.pl-0.mb-0
          = header
      - else
        %h1.chart-header.col-md-12.pl-0.mb-0
          = link_to header, department_path(chart.department, year: year)
  .card.mb-5
    .card-body.p-0
      .container
        - Category.all.each do |category|
          .row.category-row.pt-2.pb-2{ style: "background: #{category.color}" }
            .category-header-container.d-flex.align-self-start.align-items-center
              = image_tag category.icon.url, class: 'category-icon', height: 56, width: 56
              %h6.text-white
                = raw(category.name.gsub(" ", "<br>"))
