.card.col-lg-6.offset-lg-3
  .card-body
    %h2.text-center
      = t(:targets)[:create_target]

    #form-errors

    = form_for @target, url: targets_path, remote: true do |f|
      .form-group
        = f.label :name, t(:targets)[:fields][:name], class: 'required'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :department_id, t(:targets)[:fields][:department], class: 'required'
        = f.select :department_id, options_from_collection_for_select(@departments, :id, :name), {}, class: 'form-control'
      .form-group
        = f.label :category_id, t(:targets)[:fields][:category], class: 'required'
        = f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {}, class: 'form-control'
      .form-group
        = f.label :unit, t(:targets)[:fields][:unit], class: 'required'
        = f.text_field :unit, class: 'form-control'
      .form-group
        = f.label :update_frequency, t(:targets)[:fields][:update_frequency][:field], class: 'required'
        .form-check
          = f.label :update_frequency, class: 'form-check-label' do
            = f.radio_button :update_frequency, t(:targets)[:fields][:update_frequency][:monthly], class: 'form-check-input'
            = t(:targets)[:fields][:update_frequency][:monthly]
        .form-check
          = f.label :update_frequency, class: 'form-check-label' do
            = f.radio_button :update_frequency, t(:targets)[:fields][:update_frequency][:yearly], class: 'form-check-input'
            = t(:targets)[:fields][:update_frequency][:yearly]
      .form-group
        = f.label :comments, t(:targets)[:fields][:comments]
        = f.text_area :comments, rows: 3, class: 'form-control'

      = f.submit t(:actions)[:submit], class: 'btn btn-block btn-outline-success'
