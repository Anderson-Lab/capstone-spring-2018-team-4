.row#targetsContainer
  .col-lg-10
    %h2
      = t(:targets)[:table][:header]
  .col-lg-2.d-flex.justify-content-end.align-items-end
    = link_to t(:targets)[:new], new_target_path(department_id: department.id, year: year), remote: true, class: 'btn btn-block btn-success text-white mb-1'
  .col-lg-12
    %table.table.table-bordered.table-sm#targetsTable
      %thead.bg-secondary.text-white.text-center
        %tr.d-flex
          %th.col-3.col-md-2.d-flex.justify-content-center
            = t(:targets)[:table][:name]
          %th.col-4.col-md-2.d-flex.justify-content-center
            = t(:targets)[:table][:category]
          %th.col-md-2.d-none.d-md-flex.justify-content-center
            = t(:targets)[:table][:unit]
          %th.col-3.col-md-2.d-flex.justify-content-center
            = t(:targets)[:table][:compare_to_value]
          %th.col-2.col-md-3.d-flex.justify-content-center
            = t(:targets)[:table][:indicators]
          %th.col-md-1.d-none.d-md-table-cell
            = t(:actions)[:delete]
      %tbody
        - department.targets.where(year: year).each do |target|
          %tr.d-flex
            %td.col-3.col-md-2.d-flex.justify-content-center.align-items-center
              = link_to target.name, 'javascript:void(0)', class: 'd-none d-md-block target-name', role: 'button', tabindex: 0, data: { toggle: 'popover', container: 'body', placement: 'top', trigger: 'manual', animation: 'false', html: 'true', content: render('targets/forms/name_form', target: target) }
              %span.d-md-none
                = target.name
            %td.col-4.col-md-2.d-flex.justify-content-center.align-items-center
              = link_to target.category.name, 'javascript:void(0)', class: 'd-none d-md-block target-category', role: 'button', tabindex: 0, data: { toggle: 'popover', container: 'body', placement: 'top', trigger: 'manual', animation: 'false', html: 'true', content: render('targets/forms/category_form', target: target) }
              %span.d-md-none
                = target.category.name
            %td.col-md-2.d-none.d-md-flex.justify-content-center.align-items-center
              = link_to raw("#{target.unit}<br>(#{target.unit_type})"), 'javascript:void(0)', class: 'text-center target-unit', role: 'button', tabindex: 0, data: { toggle: 'popover', container: 'body', placement: 'top', trigger: 'manual', animation: 'false', html: 'true', content: render('targets/forms/unit_form', target: target) }
            %td.col-3.col-md-2.d-flex.justify-content-center.align-items-center
              = link_to target.compare_to_value, 'javascript:void(0)', class: 'd-none d-md-block target-compare-to-value', role: 'button', tabindex: 0, data: { toggle: 'popover', container: 'body', placement: 'top', trigger: 'manual', animation: 'false', html: 'true', content: render('targets/forms/compare_to_value_form', target: target) }
              %span.d-md-none
                = target.compare_to_value
            %td.col-2.col-md-3.d-flex.justify-content-center.align-items-center
              .container
                .row.text-center
                  -# Placeholders
                  = positive_indicator
                  = neutral_indicator
                  = negative_indicator
            %td.col-md-1.d-none.d-md-flex.justify-content-center.align-items-center
              = delete_target_button(target)
